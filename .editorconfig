# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
quote_type = single
max_line_length = 120
semicolon = true
trim_trailing_whitespace_on_empty_lines = true

[*.md]
trim_trailing_whitespace = false

[*.{js,json,html,css,scss,less}]
indent_size = 2
